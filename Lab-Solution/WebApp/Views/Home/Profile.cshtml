<div>
    <h4>Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">FistName</dt>
        <dd class="col-sm-10" id="firstName"></dd>
        <dt class="col-sm-2">LastName</dt>
        <dd class="col-sm-10" id="lastName"></dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10" id="email"></dd>
        <dt class="col-sm-2">Password</dt>
        <dd class="col-sm-10">********</dd>
        <dt class="col-sm-2">PhoneNumber</dt>
        <dd class="col-sm-10" id="phoneNumber"></dd>
    </dl>
</div>
<div>
    <a href="./profile/edit">Edit</a>
</div>

@section Scripts{
    <script>
        app.users.getProfile().subscribe(
            (resp) => {
                $("#firstName").text(resp.firstName);
                $("#lastName").text(resp.lastName);
                $("#email").text(resp.email);
                $("#phoneNumber").text(resp.phoneNumber);
            }, (err) => {
                sweetAlert.toast.error("Internal Server Error!");
                console.error(error);
            }
        )
    </script>
}