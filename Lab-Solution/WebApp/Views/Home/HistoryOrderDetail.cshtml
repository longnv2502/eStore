@{
}

<h1>Details</h1>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10" id="orderId"></dd>
        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10" id="orderDate"></dd>
        <dt class="col-sm-2">Required Date</dt>
        <dd class="col-sm-10" id="requiredDate"></dd>
        <dt class="col-sm-2">Shipped Date</dt>
        <dd class="col-sm-10" id="shippedDate"></dd>
        <dt class="col-sm-2">Feight</dt>
        <dd class="col-sm-10" id="feight"></dd>
        <dt class="col-sm-2">OrderDetail</dt>
        <dd class="col-sm-10">
            <table class="table">
                <thead>
                    <tr>
                        <th>ProductId</th>
                        <th>UnitPrice</th>
                        <th>Quantity</th>
                        <th>Discount</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="orderDetailBody">
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    <a href="../history">Back to List</a>
</div>

@section Scripts {
    <script>
        let searchParams = new URLSearchParams(window.location.search);
        const id = searchParams.get("id");
        app.orders.getById(id).subscribe(
            (resp) => {
                $("#orderId").text(resp.orderId);
                $("#orderDate").text(resp.orderDate);
                $("#requiredDate").text(resp.requiredDate);
                $("#shippedDate").text(resp.shippedDate);
                $("#feight").text(resp.feight);
                const html = resp.orderDetails.reduce((acc, cur) => {
                    return acc += `
                                    <tr>
                                        <td>
                                            ${cur.productId}
                                        </td>
                                        <td>
                                            ${cur.unitPrice}
                                        </td>
                                        <td>
                                            ${cur.quantity}
                                        </td>
                                        <td>
                                            ${cur.discount}
                                        </td>
                                    </tr>
                                `
                }, '');
                $("#orderDetailBody").html(html);
            }, (error) => {
                sweetAlert.toast.error("Internal Server Error!");
                console.error(error);
            }
        )
    </script>
}